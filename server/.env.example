# Server Configuration
PORT=3001

# JWT Configuration
JWT_SECRET=your-secure-jwt-secret-change-this-in-production
JWT_EXPIRES_IN=7d

# OpenRouter API Configuration
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Default LLM Model
DEFAULT_MODEL=openai/gpt-3.5-turbo

# Turso Database Configuration (for production)
# Get these from: turso db show <db-name> --url
# and: turso db tokens create <db-name>
TURSO_DATABASE_URL=libsql://your-database-name.turso.io
TURSO_AUTH_TOKEN=your-turso-auth-token

# Production Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-url.onrender.com
